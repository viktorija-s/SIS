<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<include resource="org/springframework/boot/logging/logback/defaults.xml"/>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%clr(%d{dd-MM-yyyy HH:mm:ss.SSS}){faint} %clr([%thread]){blue} %clr(%-5level){green} %clr(%logger{36}){cyan} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<logger name="lv.sis" level="DEBUG"/>
	
	<root level="INFO">
		<appender-ref ref="CONSOLE"/>
	</root>
</configuration>